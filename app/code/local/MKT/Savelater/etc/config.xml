<config>
    <modules>
        <MKT_Savelater>
            <version>0.1.0</version>
        </MKT_Savelater>
    </modules>
    <frontend>
        <routers>
            <savelater>
                <use>standard</use>
                <args>
                    <module>MKT_Savelater</module>
                    <frontName>savelater</frontName>
                </args>
            </savelater>
        </routers>
        <layout>
            <updates>
                <savelater>
                    <file>savelater.xml</file>
                </savelater>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<savelater>
				<use>admin</use>
				<args>
					<module>MKT_Savelater</module>
					<frontName>savelater</frontName>
				</args>
			</savelater>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<savelater module="savelater">
				<title>Savelater</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="savelater">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>savelater/adminhtml_savelater</action>
					</items>
				</children>
			</savelater>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<MKT_Savelater>
							<title>Savelater Module</title>
							<sort_order>10</sort_order>
						</MKT_Savelater>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<savelater>
					<file>savelater.xml</file>
				</savelater>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <savelater>
                <class>MKT_Savelater_Model</class>
                <resourceModel>savelater_mysql4</resourceModel>
            </savelater>
            <savelater_mysql4>
                <class>MKT_Savelater_Model_Mysql4</class>
                <entities>
                    <savelater>
                        <table>savelater</table>
                    </savelater>
                </entities>
            </savelater_mysql4>
        </models>
        <resources>
            <savelater_setup>
                <setup>
                    <module>MKT_Savelater</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </savelater_setup>
            <savelater_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </savelater_write>
            <savelater_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </savelater_read>
        </resources>
        <blocks>
            <savelater>
                <class>MKT_Savelater_Block</class>
            </savelater>
        </blocks>
        <helpers>
            <savelater>
                <class>MKT_Savelater_Helper</class>
            </savelater>
        </helpers>
    </global>
</config>